<h5>Previous Appointments</h5>

<table class="table table-striped">
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Doctor</th>
    <th>Actions</th>
  </tr>

<% @previous_appointments.each do |previous_appointment| %>
  <tr>
    <td><%= previous_appointment.start_date.to_s %></td>
    <td><%= previous_appointment.end_date.to_s %></td>
    <td><%= previous_appointment.doctor.full_name %></td>
    <td>
      <%= link_to 'Delete', appointment_path(previous_appointment), confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />