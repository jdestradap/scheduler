<h5>Listing Doctors</h5>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Last Name</th>
    <th>Actions</th>
  </tr>

<% @doctors.each do |doctor| %>
  <tr>
    <td><%= doctor.first_name %></td>
    <td><%= doctor.last_name %></td>
    <td>
      <%= link_to 'Edit', edit_admin_doctor_path(doctor) %> |
      <%= link_to 'Destroy', admin_doctor_path(doctor), confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "Add doctor", new_admin_doctor_path %>