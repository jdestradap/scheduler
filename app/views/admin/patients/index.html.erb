<h5>Listing Patients</h5>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Last Name</th>
    <th>Actions</th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%= patient.first_name %></td>
    <td><%= patient.last_name %></td>
    <td>
      <%= link_to 'Edit', edit_admin_patient_path(patient) %> |
      <%= link_to 'Destroy', admin_patient_path(patient), confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "Add patient", new_admin_patient_path %>